 
domain.tld, domain2.tld {

    proxy / localhost:8000 {
        proxy_header Host {host}
        proxy_header X-Forwarded-Proto {scheme}

        except /media /static
    }

    root /var/www

    ext  .html .md

    gzip


    # Logging access and errors
    log access.log

    errors {
        log error.log
        404 404.html
    }

    templates
}

